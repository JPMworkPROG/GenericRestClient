{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "System": "Error"
    }
  },
  "ApiClient": {
    "BaseUrl": "https://api.exemplo.com/",
    "Authentication": {
      "Enabled": true,
      "Type": "OAuth2",
      "GrantType": "client_credentials",
      "ClientId": "seu-client-id-aqui",
      "ClientSecret": "seu-client-secret-aqui",
      "TokenEndpoint": "https://auth.exemplo.com/connect/token",
      "TokenRefreshSkewSeconds": 60
    },
    "RateLimit": {
      "Enabled": true,
      "RequestsPerMinute": 60
    },
    "Retry": {
      "Enabled": true,
      "MaxRetries": 3,
      "BaseDelayMilliseconds": 500,
      "UseExponentialBackoff": true
    }
  }
}

